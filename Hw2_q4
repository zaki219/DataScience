import numpy as np

random_matrix = np.random.randint(1, 101, size=(4, 4))
calculate_sums = lambda matrix, axis: np.sum(matrix, axis=axis)
row_sums = calculate_sums(random_matrix, axis=1)
column_sums = calculate_sums(random_matrix, axis=0)

print("Sum of each row:", row_sums)
print("Sum of each column:", column_sums)
